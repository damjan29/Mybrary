<div>
    <label for="title">Title</label>
    <input type="text" name="title" id="name" value="<%= book.title%>">
</div>

<div>
    <label for="author">Author</label>
    <select name="author" id="author">
        <% authors.forEach(author=> { %>
            <% if (author.id===book.author) { %>
                <option selected label="<%= author.name %>" value="<%= author.id %>">
                    <% } else { %>
                <option label="<%= author.name %>" value="<%= author.id %>">
                    <% } %>
                        <% }) %>
    </select>
</div>

<div>
    <label for="publishDate">Publsih Date</label>
    <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' :
 book.publishDate.toISOString().split('T')[0] %>">
</div>

<div>
    <label for="pageCount">Page Count</label>
    <input type="number" min="1" name="pageCount" value="<%= book.pageCount %>">
</div>

<div style="width:300px;">
    <label for="cover">Cover</label>
    <input type="file" name="cover" class="filepond">
</div>

<div>
    <label for="description">Description</label>
    <textarea name="description">
        <%= book.description %>
    </textarea>
</div>